@using Fantini.Omar._5i.XMLReadWrite2
@model List<Persona>
@{
    ViewBag.Title = "Tabella";
}




<h2>Index</h2>

<table class="table table-bordered">
    @foreach (Persona m in Model)
    {
        <tr>
            <td>@m.nome</td>
            <td>@m.cognome</td>
            <td>@m.telefono</td>
            <td>@m.indirizzo</td>
        </tr>
    }    
</table>
<button type="button">Aggiungi</button>